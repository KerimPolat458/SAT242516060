                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="stats" class="text-decoration-none text-success fw-bold small">
                        İncele <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        @* Sistem Durumu Kartı *@
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-2">Sistem Durumu</h6>
                        <h2 class="mb-0 fw-bold text-info">Aktif</h2>
                    </div>
                    <div class="icon-box bg-info bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-hdd-network fs-3 text-info"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <span class="text-muted small">Veritabanı Bağlı</span>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string UserName = "";
    private int TeacherCount = 0;

    protected override async Task OnInitializedAsync()
    {
        // Kullanıcı Adını Al
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            // E-posta adresinin baş kısmını veya varsa ismini al
            UserName = user.Identity.Name?.Split('@')[0] ?? "Kullanıcı";
        }

        // Toplam Öğretmen Sayısını Çek (Senin Provider yapınla)
        try
        {
            // Boş bir model gönderip, SP'den sadece sayıları alacağız
            // Not: SP_GetTeachers stored procedure'ü TotalRecordCount döndürüyor.
            var result = await _provider.Execute<Teacher>(new MyDbModel<Teacher>(), "SP_GetTeachers", true);
            TeacherCount = result.Parameters.TotalRecordCount;
        }
        catch
        {
            // Hata olursa 0 kalsın, sayfayı patlatmasın
            TeacherCount = 0;
        }
    }
}