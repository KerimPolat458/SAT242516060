@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

@code {
    protected override void OnInitialized()
    {
        // Kullanıcıyı, geldiği sayfayı (ReturnUrl) hatırlayarak Login'e gönder
        // Böylece giriş yapınca kaldığı yere (örn: Ana Sayfa) geri döner.
        var returnUrl = Navigation.Uri;
        Navigation.NavigateTo($"Account/Login?ReturnUrl={Uri.EscapeDataString(returnUrl)}", forceLoad: true);
    }
}