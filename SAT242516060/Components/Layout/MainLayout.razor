@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        @* ÜST ÇUBUK (TOP ROW) *@
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <span class="me-3">Merhaba, <b>@context.User.Identity?.Name</b>!</span>

                    @* YENİ ÖZEL LOGOUT YOLU *@
                    @* Action artık /Logout oldu ve ReturnUrl parametresi yok *@
                    <form action="/Logout" method="post" class="d-inline">
                        <AntiforgeryToken />
                        <button type="submit" class="btn btn-link text-danger text-decoration-none border-0 bg-transparent">
                            <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                        </button>
                    </form>
                </Authorized>
                <NotAuthorized>
                    <a href="Account/Login" class="btn btn-link">Giriş Yap</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>